{
    "manifest_version": 2,

    "name": "Track FB Usage",
    "description": "This extension tracks how much time you spend on Facebook.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["tracker.js"]
    },

    "permissions": [
        "activeTab",
        "*://*.facebook.com/*",
        "https://ajax.googleapis.com/"
    ]
}